
@{
    ViewBag.Title = "Index";
}

<h2>Register User</h2>

<div class="container">
    <form>
        <div class="form-group">
            <label for="Id">Id</label>
            <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
        </div>
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control" id="FirstName" placeholder="First Name" />
            <span class="error">Valid First Name Required</span>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="LastName" placeholder="Last Name" />
            <span class="error">Valid Last Name Required</span>
        </div>
        <div class="form-group">
            <label for="Gender">Gender</label>
            <select id="Gender" data-placement="Choose" class="form-control">
                <option>Male</option>
                <option>Female</option>
            </select>
            <span class="error">Valid Gender Required</span>
        </div>
        <div class="form-group">
            <label for="Phone">Phone</label>
            <input type="text" class="form-control" id="Phone" placeholder="Phone" />
            <span class="error">Valid Phone Required</span>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" id="Email" placeholder="Email" />
            <span class="error">Valid Email Required</span>
        </div>
        <div class="form-group">
            <label for="Amount">Amount</label>
            <input type="number" class="form-control" id="Amount" placeholder="Amount" />
            <span class="error">Valid Amount Required</span>
        </div>
        <div class="form-group">
            <label for="Username">Username</label>
            <input type="text" class="form-control" id="Username" placeholder="Username" />
            <span class="error">Valid Username Required</span>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" placeholder="Password" />
            <span class="error">Valid Password Required</span>
            <input type="checkbox" onclick="ShowPass()"> Show Password
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" placeholder="Address" />
            <span class="error">Valid Address Required</span>
        </div>
        <div class="form-group">
            <label for="SecretQuestion">Secret Question</label>
            <select id="SecretQuestion" data-placement="Choose" class="form-control">
                <option>What was the name of your first stuffed animal?</option>
                <option>What was your childhood nickname?</option>
                <option>What is the name of your favorite childhood friend?</option>
            </select>
            <span class="error">Valid Secret Question Required</span>
        </div>
        <div class="form-group">
            <label for="SecretAnswer">Secret Answer</label>
            <input type="text" class="form-control" id="SecretAnswer" placeholder="Secret Answer" />
            <span class="error">Valid Secret Answer Required</span>
        </div>
        <div class="form-group">
            <label for="Religions">Religion Name</label>
            <select id="Religions" data-placement="Choose" class="form-control"></select>
            <span class="error">Valid Religion Required</span>
        </div>
        <div class="form-group">
            <label for="Provinces">Province Name</label>
            <select id="Provinces" data-placement="Choose" class="form-control" onchange="LoadRegencyCombo();"></select>
            <span class="error">Valid Province Required</span>
        </div>
        <div class="form-group">
            <label for="Regencies">Regency Name</label>
            <select id="Regencies" data-placement="Choose" class="form-control" onchange="LoadSubDistrictCombo();"></select>
            <span class="error">Valid Rengency Required</span>
        </div>
        <div class="form-group">
            <label for="SubDistricts">Sub District Name</label>
            <select id="SubDistricts" data-placement="Choose" class="form-control" onchange="LoadVillageCombo();"></select>
            <span class="error">Valid Sub District Required</span>
        </div>
        <div class="form-group">
            <label for="Villages">Village Name</label>
            <select id="Villages" data-placement="Choose" class="form-control"></select>
            <span class="error">Valid Village Required</span>
        </div>
    </form>
</div>
<div>
    <button type="button" class="btn btn-primary" id="Save" onclick="validateInsertUser();">Register</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearUserScreen();">Back</button>
</div>

@section Scripts {
    <script src="~/Scripts/Sweetalert/sweetalert.min.js"></script>
    <link href="~/Scripts/Sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/Datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/Datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Master/RegisterMaster/RegisterUser.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}